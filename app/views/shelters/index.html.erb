<h1>Shelters</h1>
<h3><a href="/shelters/new">New Shelter</a></h3>

<% @shelters.each do |shelter| %>
  <div class="content-card">
    <h2><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h2>
    <a href="/shelters/<%= shelter.id %>/edit">Update Shelter</a></br>
    <div>
      <img src="https://www.brandeps.com/icon-download/T/Trash-icon-vector-06.svg" alt="delete-icon" class="delete-icon">
      <%= link_to "Delete Shelter", "/shelters/#{shelter.id}", method: :delete, data: {confirm: "Are you sure you want to delete this shelter?"},  class: "delete-shelter" %>
    </div>
  </div>
<% end %>
