<h1>Shelter's Pets</h1>

<% @shelter.pets.each do |pet| %>
  <h2><a href="/pets/<%= pet.id %>"><%= pet.name %></a></h2>
  <%= image_tag pet.image %>
  <p>Age: <%= pet.approximate_age %></p>
  <p>Sex: <%= pet.sex %></p>
<% end %>

<h3><a href="/shelters/<%= @shelter.id %>/pets/new">Create Pet</a></h3>