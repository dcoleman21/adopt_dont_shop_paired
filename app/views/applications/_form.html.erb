<%= form_tag path, method: method, class: "form" do %>

  <%= label_tag :Select_pets %>
  <%= select_tag 'pet_names', options_for_select(@fav_pets.collect{ |pet| [pet.name, pet.id] }) %>
  
  <%= label_tag :name %>
  <%= text_field_tag :name, @application.name, placeholder: 'Name' %><br>

  <%= label_tag :address %>
  <%= text_field_tag :application, @application.application, placeholder: 'Address' %><br>

  <%= label_tag :city %>
  <%= text_field_tag :city, @application.city, placeholder: 'City' %><br>

  <%= label_tag :state %>
  <%= text_field_tag :state, @application.state, placeholder: 'State' %><br>
  
  <%= label_tag :zip %>
  <%= text_field_tag :zip, @application.zip, placeholder: 'Zip' %><br>

  <%= label_tag :phone_number %>
  <%= text_field_tag :phone_number, @application.phone_number, placeholder: 'Phone Number' %><br>

  <%= submit_tag button_text, class: "button" %>
<% end %>
