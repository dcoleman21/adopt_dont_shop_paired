<h1>Pets</h1>

<% @pets.each do |pet| %>
  <div class="content-card" id="pet-<%= pet.id %>">
    <h2> <a href="/pets/<%= pet.id %>"><%= pet.name %></a></h2>
    <%= image_tag pet.image, class: "image" %>

    <%= render :partial => "info", locals: { pet: pet } %>

    <br><br>

    <div>
      <a href="/pets/<%= pet.id %>/edit">Update Pet</a><br>
      <% if pet.is_pending %>
        <p class="explanation">Pet has pending application</p>
      <% else %>
        <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete, data: {confirm: "Are you sure you want to delete this pet?"} %>
      <% end %>
    </div>
  </div>
<% end %>
